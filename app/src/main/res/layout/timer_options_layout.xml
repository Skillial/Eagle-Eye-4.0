<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#000000">

    <ImageButton
        android:id="@+id/btn_timer_off"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_timer_off"
        android:contentDescription="Timer Off" />

    <ImageButton
        android:id="@+id/btn_timer_3s"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_timer_3s"
        android:contentDescription="Timer 3 seconds"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/btn_timer_5s"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_timer_5s"
        android:contentDescription="Timer 5 seconds"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/btn_timer_10s"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_timer_10s"
        android:contentDescription="Timer 10 seconds"
        android:layout_marginStart="8dp" />

</LinearLayout>